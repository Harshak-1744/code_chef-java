import java.util.Scanner;

class Codechef {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int R = sc.nextInt();
        int C = sc.nextInt();
        int E = sc.nextInt();

        int totalCells = (R + E) * C;

        System.out.println(totalCells);
    }
}
