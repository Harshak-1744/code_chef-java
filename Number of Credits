import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc = new Scanner(System.in);
		int T = sc.nextInt();
		for(int i = 1;i<=T;i++)
		{
		    int X = sc.nextInt();
		    int Y = sc.nextInt();
		    int Z = sc.nextInt();
		    
		    int X1 = X*4;
		    int Y1 = Y*2;
		    int Z1 = Z*0;
		    
		    System.out.println(X1+Y1+Z1);
		}
	}
}
